    			<param name="root">jsonData</param>
    		</result>
    	</action>
    	<action name="ordinaryUserLogin" class="com.huiguanjia.action.OrdinaryUserLoginAction" method="AJAXordinaryUserLogin">
    		<result type="json" name="success">
    			<param name="root">jsonData</param>
    		</result>
    	</action>
    	<action name="companyManagerRegister" class="com.huiguanjia.action.CompanyManagerRegisterAction" method="AJAXcompanyManagerRegister">
    		<result type="json" name="success">
    			<param name="root">jsonData</param>
    		</result>
    	</action>
    	<action name="ordinaryUserRegister" class="com.huiguanjia.action.OrdinaryUserRegisterAction" method="AJAXordinaryUserRegister">
    		<result type="json" name="success">
    			<param name="root">jsonData</param>
    		</result>
    	</action>
    	<action name="ordinaryUserLogout" class="com.huiguanjia.action.OrdinaryUserLoginAction" method="AJAXordinaryUserLogout">
