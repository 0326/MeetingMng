<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<constant name="struts.devMode" value="true" />
	<constant name="struts.i18n.encoding" value="UTF-8" />
	<constant name="struts.serve.static.browserCache" value="false" />
	<!--开发环境api，生产环境需要去掉以下api-->
	<package name="dev-package" namespace="/api/dev" extends="json-default">
    	<action name="createindusty" class="com.huiguanjia.action.DevAction" method="createIndusty">
    		<result type="json" name="success">
    			<param name="root">jsonData</param>
    		</result>
    	</action>
    	<action name="createcity" class="com.huiguanjia.action.DevAction" method="createCity">
    		<result type="json" name="success">
    			<param name="root">jsonData</param>
    		</result>
    	</action>
 	</package>
 	<!-- 公司管理后台首页 -->
	<package name="manage-package" namespace="/" extends="struts-default">
    	<action name="manage">  
		    <result>/manage.html</result>  
	    </action>
    </package>
    <!-- 公司管理后台-部门操作api -->
     <package name="department-package" namespace="/api/v1/manage/department" extends="json-default">
    	<action name="add" class="com.huiguanjia.action.DepartmentAction" method="add">
    		<result type="json" name="success">
    			<param name="root">jsonData</param>
    		</result>
    	</action>
    	<action name="delete" class="com.huiguanjia.action.DepartmentAction" method="delete">
    		<result type="json" name="success">
    			<param name="root">jsonData</param>
    		</result>
    	</action>
    	<action name="update" class="com.huiguanjia.action.DepartmentAction" method="update">
    		<result type="json" name="success">
    			<param name="root">jsonData</param>
    		</result>
    	</action>
    	<action name="findByName" class="com.huiguanjia.action.DepartmentAction" method="findByName">
    		<result type="json" name="success">
    			<param name="root">jsonData</param>
    		</result>
    	</action>
    	<action name="findByCompanyId" class="com.huiguanjia.action.DepartmentAction" method="findByCompanyId">
    		<result type="json" name="success">
    			<param name="root">jsonData</param>
    		</result>
    	</action>
 	</package>
    <!-- util 公共库接口 -->
    <package name="util-package" namespace="/api/util" extends="json-default">
    	<action name="qiniu_get_uptoken" class="com.huiguanjia.util.QiniuyunUtil" method="upToken">
    		<result type="json" name="success">
    			<param name="root">jsonData</param>
    		</result>
    	</action>
 	</package>
	<!-- 用户个人操作接-登录/注册/修改/查询个人信息 -->
	<package name="user-package" namespace="/api/v1" extends="json-default">
    	<action name="companyManagerLogin" class="com.huiguanjia.action.CompanyManagerAction" method="login">
    		<result type="json" name="success">
    			<param name="root">jsonData</param>
    		</result>
    	</action>
		<action name="companyManagerLogout" class="com.huiguanjia.action.CompanyManagerAction" method="logout">
    		<result type="json" name="success">
    			<param name="root">jsonData</param>
    		</result>
    	</action>
    	<action name="companyManagerRegister" class="com.huiguanjia.action.CompanyManagerAction" method="register">
    		<result type="json" name="success">
    			<param name="root">jsonData</param>
    		</result>
    	</action>
    	<action name="companyManagerUsernameRepeat" class="com.huiguanjia.action.CompanyManagerAction" method="usernameRepeat">
    		<result type="json" name="success">
    			<param name="root">jsonData</param>
    		</result>
    	</action>
    	<action name="companyManagerCompanyNameRepeat" class="com.huiguanjia.action.CompanyManagerAction" method="companyNameRepeat">
    		<result type="json" name="success">
    			<param name="root">jsonData</param>
    		</result>
    	</action>
    	<action name="companyManagerActivate" class="com.huiguanjia.action.CompanyManagerAction" method="activate">
    		<result type="json" name="success">
    			<param name="root">jsonData</param>
    		</result>
    	</action>
    	<action name="companyNameRepeat" class="com.huiguanjia.action.CompanyManagerAction" method="companyNameRepeat">
    		<result type="json" name="success">
    			<param name="root">jsonData</param>
    		</result>
    	</action>
    	<action name="usernameRepeat" class="com.huiguanjia.action.CompanyManagerAction" method="usernameRepeat">
    		<result type="json" name="success">
    			<param name="root">jsonData</param>
    		</result>
    	</action>
    	
    	<action name="ordinaryUserLogin" class="com.huiguanjia.action.OrdinaryUserAction" method="login">
    		<result type="json" name="success">
    			<param name="root">jsonData</param>
    		</result>
    	</action>
    	
    	<action name="ordinaryUserRegister" class="com.huiguanjia.action.OrdinaryUserAction" method="register">
    		<result type="json" name="success">
    			<param name="root">jsonData</param>
    		</result>
    	</action>
    	<action name="ordinaryUserLogout" class="com.huiguanjia.action.OrdinaryUserAction" method="logout">
    		<result type="json" name="success">
    			<param name="root">jsonData</param>
    		</result>
    	</action>
    	<action name="phoneRepeat" class="com.huiguanjia.action.OrdinaryUserAction" method="findUserByPhone">
    		<result type="json" name="success">
    			<param name="root">jsonData</param>
    		</result>
    	</action>
    	
    	<action name="activemail" class="com.huiguanjia.action.ActivateAction" method="emailActivate">
    		<result type="json" name="success">
    			<param name="root">jsonData</param>
    		</result>
    	</action>
 	 </package>

</struts>    
