<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<constant name="struts.devMode" value="true" />
	<constant name="struts.i18n.encoding" value="UTF-8" />
	<constant name="struts.serve.static.browserCache" value="false" />
	<!--开发环境api，生产环境需要去掉以下api-->
	<package name="json-package" namespace="/api/dev" extends="json-default">
    	<action name="createindusty" class="com.huiguanjia.action.DevAction" method="createIndusty">
    		<result type="json" name="success">
    			<param name="root">jsonData</param>
    		</result>
    	</action>
    	<action name="createcity" class="com.huiguanjia.action.DevAction" method="createCity">
    		<result type="json" name="success">
    			<param name="root">jsonData</param>
    		</result>
    	</action>
 	 </package>
	<package name="manage-package" namespace="/" extends="struts-default">
    	<action name="manage">  
		    <result>/manage.html</result>  
	    </action>
    </package>
	<!-- login and register -->
	<package name="json-package2" namespace="/api/v1" extends="json-default">
    	<action name="systemAdministratorLogin" class="com.huiguanjia.action.SystemAdministratorAction" method="login">
    		<result type="json" name="success">
    			<param name="root">jsonData</param>
    		</result>
    	</action>
    	<action name="companyManagerLogin" class="com.huiguanjia.action.CompanyManagerAction" method="login">
    		<result type="json" name="success">
    			<param name="root">jsonData</param>
    		</result>
    	</action>
    	<action name="ordinaryUserLogin" class="com.huiguanjia.action.OrdinaryUserAction" method="login">
    		<result type="json" name="success">
    			<param name="root">jsonData</param>
    		</result>
    	</action>
    	<action name="companyManagerRegister" class="com.huiguanjia.action.CompanyManagerAction" method="register">
    		<result type="json" name="success">
    			<param name="root">jsonData</param>
    		</result>
    	</action>
    	<action name="ordinaryUserRegister" class="com.huiguanjia.action.OrdinaryUserAction" method="register">
    		<result type="json" name="success">
    			<param name="root">jsonData</param>
    		</result>
    	</action>
    	<action name="ordinaryUserLogout" class="com.huiguanjia.action.OrdinaryUserAction" method="logout">
    		<result type="json" name="success">
    			<param name="root">jsonData</param>
    		</result>
    	</action>
    	<action name="companyManagerLogout" class="com.huiguanjia.action.CompanyManagerAction" method="logout">
    		<result type="json" name="success">
    			<param name="root">jsonData</param>
    		</result>
    	</action>
    	
 	 </package>

</struts>    
